    <script>
        async function Delete(id) {
            if (!confirm('Are you sure you want to delete this schedule?')) return;
            
            const res = await fetch("/schedule/delete", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ "id":id })
            });

            const result = await res.json();
            if(result.response == "success"){
                await get();
            }
        }

        function toMinutes(t) {
            let [h, m] = t.split(":").map(Number);
            return h * 60 + m;
        }


        function calculateTotalHours(obj){
            let summ = {
                SCHOOL:0,WORK:0,
                monday:0,tuesday:0,wednesday:0,thursday:0,friday:0,
                saturday:0,sunday:0
            }

            for(let sep of obj){
                summ[sep.day] += toMinutes(sep.end_time) - toMinutes(sep.startt_time)
                summ[sep.label] += toMinutes(sep.end_time) - toMinutes(sep.startt_time)
            }

            let label = ["SCHOOL","WORK","monday","tuesday","wednesday","thursday","friday","saturday","sunday"]

            document.querySelectorAll(".cval").forEach((v,i)=>{
                v.innerHTML = (summ[label[i]]/60) + " Hrs"
            })

            console.log(summ)
        }




        async function get(){
            try {
                let res = await fetch("/schedule/sched");
                let rows = await res.json();
                console.log(rows);
                
                if (!Array.isArray(rows) || rows.length === 0) {
                    document.getElementById('scheduleRows').innerHTML = `
                        <div class="no-schedule">
                            <h2>No Schedule Yet</h2>
                            <p>Click the "Find Schedule" button to browse and add classes or work schedules!</p>
                        </div>
                    `;
                    return;
                }

                function checkoverlaps(){
                    rows.sort((a, b) => toMinutes(a.startt_time) - toMinutes(b.startt_time));
                    for (let i = 0; i < rows.length - 1; i++) {
                        if (rows[i].day !== rows[i + 1].day) continue;

                        let current = toMinutes(rows[i].end_time);
                        let next = toMinutes(rows[i + 1].startt_time);

                        if (current > next) {
                            rows[i].overlaps = true;
                            rows[i + 1].overlaps = true;
                        }
                    }
                    calculateTotalHours(rows)
                }

                function sched(data, label, overlap){
                    let divs = "";
                    let days = {"monday":0, "tuesday":1, "wednesday":2, "thursday":3, "friday":4, "saturday":5, "sunday":6};

                    for(let i = 0; i < 7; i++){
                        if(i == days[data] && overlap){
                            divs += `<div class="day overlap"><h3>${label}</h3></div>`;
                        }
                        else if(i == days[data]){
                            divs += `<div class="day active"><h3>${label}</h3></div>`;
                        }
                        else{
                            divs += `<div class="day"><h3>-</h3></div>`;
                        }
                    }
                    return divs;
                }

                checkoverlaps();

                let html = "";
                rows.forEach(v => {
                    html += `
                    <div class="row">
                        <p class="time">${v.startt_time} - ${v.end_time}</p>
                        ${sched(v.day, v.label, v.overlaps)}
                        <button class="dltbtn" onclick="Delete(${v.id})">üóëÔ∏è</button>
                    </div>
                    `;
                });
                
                document.getElementById('scheduleRows').innerHTML = html;
            } catch (error) {
                console.error('Error fetching schedule:', error);
            }
        }

       
        get();
    </script>
