        //    {id:4,startt_time:"8:30", end_time:"10:30",label:"WORK",day:"moday",overlapse:"false",position:"cashier",location:"molo"},
        //    {id:5,startt_time:"8:30", end_time:"10:30",label:"WORK",day:"moday",overlapse:"false",position:"cashier",location:"molo"},
        //];
        let data;

        async function showcards(){
            let con = document.querySelector(".con")
            data = await some("/find/getsched",{});
            con.innerHTML = ""
            let cards = ""
            data.forEach(v=>{
                cards += `
                <div class="card">
                    <div>
                        <h1>${v.label}</h1>
                    </div>
                    <h3>Day: ${v.day}</h3>
                    <p>Time: ${v.startt_time} - ${v.end_time}</p>
                    <p>location: ${v.location}</p>
                    <p>position:${v.position}</p>
                    <button onclick="select(${v.id})">Select</button>
                </div>`
            })
            con.innerHTML = cards
        }

        showcards()

        function select(id){
            let selected = {};
            data.forEach(v=>{
                if(v.id == id) selected = v;
            })
            alert("Added Success")
            some("/schedule/add", selected)
        }


    </script>



